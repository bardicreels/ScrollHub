{
  "name": "sand.scroll.pub",
  "version": "0.1.0",
  "description": "This repo powers the sand.scroll.pub server, where anyone in the world can instantly launch a new (ephemeral) website powered by Scroll.",
  "main": "server.js",
  "author": "Breck Yunits",
  "dependencies": {
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "scroll-cli": "^101.5.0"
  },
  "scripts": {
    "start": "node server.js",
    "up": "npm install scroll-cli@latest"
  },
  "prettier": {
    "parser": "babel",
    "useTabs": false,
    "tabWidth": 2,
    "semi": false,
    "printWidth": 240,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "quoteProps": "as-needed"
  }
}
